{
    "name": "etu-classes-backend",
    "description": "etu-classes api",
    "license": "MIT",
    "version": "0.0.0",
    "scripts": {
        "start": "yarn run serve",
        "build": "yarn run set-build-time && rm -rf ./dist && yarn run build-ts && yarn run lint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
        "test": "jest --forceExit --runInBand --coverage --verbose",
        "test-silent": "jest --forceExit --runInBand --coverage --verbose --silent",
        "watch-test": "yarn run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "yarn run build && yarn run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"yarn run serve-debug\"",
        "production": "NODE_ENV=production yarn start",
        "clear-db": "ts-node util/clear-db",
        "fill-db": "ts-node util/fill-db",
        "set-build-time": "bash util/set_build_time.sh"
    },
    "dependencies": {
        "@polka/redirect": "^1.0.0-next.0",
        "@polka/send-type": "^0.5.2",
        "app-root-path": "^3.0.0",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "connect-session-sequelize": "^6.1.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express-session": "^1.17.1",
        "helmet": "^3.22.0",
        "lodash": "^4.17.15",
        "moment": "^2.26.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "passport": "^0.4.0",
        "passport-custom": "^1.1.1",
        "passport-local": "^1.0.0",
        "pg": "^8.0.2",
        "pg-hstore": "^2.3.3",
        "polka": "^0.5.2",
        "sequelize": "^5.21.6",
        "sequelize-cli": "^6.2.0",
        "serve-static": "^1.14.1",
        "winston": "^3.2.1",
        "winston-daily-rotate-file": "^4.4.2"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/bluebird": "^3.5.33",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/concurrently": "^5.2.0",
        "@types/cors": "^2.8.6",
        "@types/ejs": "^3.0.4",
        "@types/eslint": "^6.1.1",
        "@types/express-session": "^1.17.0",
        "@types/helmet": "^0.0.47",
        "@types/jest": "^26.0.9",
        "@types/lodash": "^4.14.141",
        "@types/morgan": "^1.9.0",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.0.1",
        "@types/passport": "^1.0.1",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.10",
        "@types/trouter": "^3.1.0",
        "@types/validator": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "chai": "^4.2.0",
        "concurrently": "^5.0.0",
        "eslint": "^7.0.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^26.2.2",
        "nodemon": "^2.0.4",
        "prettier": "2.2.1",
        "reflect-metadata": "^0.1.13",
        "sequelize-typescript": "^1.1.0",
        "supertest": "^4.0.2",
        "supertest-session": "^4.1.0",
        "ts-jest": "^26.1.4",
        "ts-node": "^8.4.1",
        "typescript": "^3.9.7"
    }
}
